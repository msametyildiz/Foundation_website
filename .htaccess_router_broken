# Temel Güvenlik Ayarları
Options -Indexes
ServerSignature Off

# PHP Değerleri (cPanel uyumluluğu için)
<IfModule mod_php.c>
    php_flag display_errors off
    php_flag log_errors on
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value memory_limit 128M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value session.gc_maxlifetime 3600
</IfModule>

# Güvenlik Başlıkları
<IfModule mod_headers.c>
    # Prevent MIME sniffing
    Header always set X-Content-Type-Options nosniff
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Prevent clickjacking
    Header always set X-Frame-Options SAMEORIGIN
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy - Temel Güvenlik (gerektiğinde özelleştirin)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://www.google.com https://maps.googleapis.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https:; connect-src 'self';"
</IfModule>

# Hassas dosya ve dizinlere erişimi engelle
<FilesMatch "\.(env|log|ini|conf|sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Hassas dizinlere erişimi engelle (RewriteRule kullanarak - mod_rewrite gerektirir)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^\.git - [F,L]
    RewriteRule ^\.env - [F,L]
    RewriteRule ^config/ - [F,L]
    RewriteRule ^logs/ - [F,L]
    RewriteRule ^vendor/ - [F,L]
</IfModule>

# Uploads dizinindeki PHP dosyalarını engelle
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^/uploads/.*\.(php|php3|php4|php5|phtml)$ [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# Sıkıştırma - mod_deflate gerektirir
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript application/json
</IfModule>

# Tarayıcı önbelleği
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# URL Yönlendirme ve SEO Dostu URL'ler
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Üretimde HTTPS'e yönlendir (SSL kurulduğunda etkinleştirin)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # www'suz kullanım (isteğe bağlı)
    # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    
    # index.php'yi kaldır - hem direkt hem de parametreli
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.php(\?[^\ ]*)?\ HTTP/
    RewriteRule ^index\.php$ / [R=301,L]
    
    # index.php?page=xxx -> temiz URL'e yönlendir
    RewriteCond %{QUERY_STRING} ^page=([a-zA-Z0-9-]+)$
    RewriteRule ^index\.php$ /%1? [R=301,L]
    
    # Eğer gerçek bir dosya veya klasör değilse
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Ana sayfa
    RewriteRule ^$ index.php [L]
    
    # Sade sayfalar (örn: /iletisim)
    RewriteRule ^([a-zA-Z0-9-]+)/?$ index.php?page=$1 [QSA,L]
    
    # ID içeren sayfalar (örn: /projeler/1)
    RewriteRule ^([a-zA-Z0-9-]+)/([a-zA-Z0-9-]+)/?$ index.php?page=$1&id=$2 [QSA,L]
    
    # Admin ve AJAX işleyicileri korunuyor
    RewriteRule ^admin/?$ admin/index.php [L]
    RewriteRule ^admin/(.*)$ admin/index.php?page=$1 [L,QSA]
    RewriteRule ^ajax/(.*)$ ajax/$1 [L,QSA]
</IfModule>

# Hata sayfaları
ErrorDocument 404 /index.php?page=404
ErrorDocument 403 /index.php?page=403
ErrorDocument 500 /index.php?page=500

# Karakter seti
AddDefaultCharset UTF-8

# Maksimum dosya yükleme boyutu (cPanel uyumluluğu için)
LimitRequestBody 10485760
