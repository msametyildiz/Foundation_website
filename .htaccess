# Basit .htaccess - SEO Dostu URL'ler için Düzenlenmiş
# Temel güvenlik ayarları ve URL yönlendirme kuralları

# Temel Güvenlik Ayarları
Options -Indexes
ServerSignature Off

# PHP Değerleri (cPanel uyumluluğu için)
<IfModule mod_php.c>
    php_flag display_errors off
    php_flag log_errors on
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value memory_limit 128M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value session.gc_maxlifetime 3600
</IfModule>

# Güvenlik Başlıkları
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-XSS-Protection "1; mode=block"
    Header always set X-Frame-Options SAMEORIGIN
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Hassas dosya ve dizinlere erişimi engelle
<FilesMatch "\.(env|log|ini|conf|sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Uploads dizinindeki PHP dosyalarını engelle
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Uploads dizinindeki PHP dosyalarını engelle
    RewriteCond %{REQUEST_URI} ^/uploads/.*\.(php|php3|php4|php5|phtml)$ [NC]
    RewriteRule ^(.*)$ - [F,L]

    # Mevcut dosya veya dizin değilse ve dahili yönlendirme değilse
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !index\.php
    
    # Özel URL yönlendirmeleri
    
    # Ana sayfa için özel kural (gerekirse)
    RewriteRule ^$ index.php [L]
    
    # Admin paneli için özel kural
    RewriteRule ^admin/?$ admin/index.php [L]
    RewriteRule ^admin/(.*)$ admin/$1 [L]
    
    # Alt sayfa ID'leri için kural (örn: /projects/5)
    RewriteRule ^([a-zA-Z0-9_-]+)/([0-9]+)/?$ index.php?page=$1&id=$2 [QSA,L]
    
    # Normal sayfalar için kural
    RewriteRule ^([a-zA-Z0-9_-]+)/?$ index.php?page=$1 [QSA,L]
</IfModule>

# Sıkıştırma
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript application/json
</IfModule>

# Hata sayfaları
ErrorDocument 404 /404
ErrorDocument 403 /403
ErrorDocument 500 /500

# Karakter seti
AddDefaultCharset UTF-8 